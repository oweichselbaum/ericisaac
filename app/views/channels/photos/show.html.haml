%h1= @photo.name.titleize
= link_to "Back to #{@photo.channels.first.name.titleize}", channel_path(@photo.channels.first)
.image_wrapper
  .pinit
    = link_to image_tag("http://assets.pinterest.com/images/pidgets/pin_it_button.png"), "//pinterest.com/pin/create/button/?url=#{channel_photo_url(@photo.channels.first, @photo)}&media=#{@photo.main_image.url}&description=#{@photo.name.titleize}", :"data-pin-config" => "none", :"data-pin-do" => "buttonPin"
  %div{:class => "fb-like", :"data-href" => channel_photo_url(@photo.channels.first, @photo), :"data-width" => "450", :"data-layout" => "button_count", :"data-show-faces" => "false", :"data-send" => "false"}
  = image_tag @photo.main_image.url