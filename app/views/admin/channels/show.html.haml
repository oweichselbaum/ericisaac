%h2 #{@channel.name.titleize} Channel

.section.titleized
  %h4 Landing Page
  .section-body
    %dl
      %dt Metadata title
      %dd= @channel.title
      %dt Metadata description
      %dd= @channel.description
      %dt Metadata keywords
      %dd= @channel.keywords

    - if @channel.channel_photos.present?
      %hr

      %p Drag and drop to reorder.
      %ul.title
        %li
        %li Title
        %li Photo
        %li Image Size
      %ol#sortable{"data-update-url" => sort_admin_channel_photos_path(@channel)}
        - @channel.photos.each do |photo|
          = content_tag_for :li, photo, :class => cycle("odd", "even") do
            %ul
              %li
                %span.handle [drag]
              %li
                = link_to photo.name, edit_admin_photo_path(photo)
              %li
                = image_tag (photo.main_image), :style => ("width: 100px;") if photo.main_image.present?
              %li
                = photo.image_size


    = link_to "Edit Channel", edit_admin_channel_path(@channel), :class => "small-button"
    = button_to "Delete Channel", admin_channel_path(@channel), :method => :delete, :class => "small-button", :confirm => "Are you sure you want to delete this channel?"

