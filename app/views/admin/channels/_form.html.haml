= semantic_form_for [:admin, @channel] do |f|
  = f.inputs do
    = f.inputs :name, :required => true
    = f.inputs :title, :required => true
    = f.inputs :keywords, :required => true
    = f.inputs :description, :required => true
    = f.inputs :hidden, :as => :check_box
  = f.buttons do
    = f.submit "Submit"

= link_to "Cancel", admin_channel_path(@channel), :class => "small-button"