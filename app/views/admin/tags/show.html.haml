%h2 #{@tag.name.titleize}

.section.titleized
  %h4 Landing Page
  .section-body
    %dl
      %dt Tag:
      %dd
        %b
          = @tag.name.titleize


    = link_to "Edit Tag", edit_admin_tag_path(@tag), :class => "small-button"
    = button_to "Delete Tag", admin_tag_path(@tag), :method => :delete, :class => "small-button", :confirm => "Are you sure you want to delete this photo?"


