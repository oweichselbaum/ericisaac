!!!
%html
  %head
    - if content_for?(:title)
      = content_for(:title)
    - else
      %title Eric Isaac Photography

    - if content_for?(:meta_keywords)
      = content_for(:meta_keywords)

    - if content_for?(:meta_description)
      = content_for(:meta_description)

    - if content_for?(:facebook)
      = content_for(:facebook)
    = stylesheet_link_tag "application", :media => 'all'
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jqueryui/1.8.24/jquery-ui.min.js"
    = javascript_include_tag "//www.google.com/jsapi"
    = javascript_include_tag "application-list"
    = csrf_meta_tags
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-45056120-1', 'ericisaac.com');
      ga('send', 'pageview');
      
  %body{:class => body_classes}
    #fb-root
    %script
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=185976958177339";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

    = render 'layouts/global_nav'
    .body
      .content
        #flash
          %p.notice= notice
          %p.alert= alert

        = yield
      .push

    = render 'layouts/footer'
    %script{:type => "text/javascript", :src => "//assets.pinterest.com/js/pinit.js"}