!!!
%html
  %head
    - if content_for?(:title)
      = content_for(:title)
    - else
      %title Eric Isaac Photography

    -#%meta{:name => "apple-mobile-web-app-capable", :content => "yes"}
    %meta{:name => "apple-mobile-web-app-status-bar-style", :content => "black"}
    %meta{:name => "viewport", :content => "width = device-width", :"initial-scale" => 0}

    - if content_for?(:meta_keywords)
      = content_for(:meta_keywords)

    - if content_for?(:meta_description)
      = content_for(:meta_description)

    - if content_for?(:facebook)
      = content_for(:facebook)

    = stylesheet_link_tag "mobile", :media => 'all'
    = javascript_include_tag "jquery-182.min.js"
    = javascript_include_tag "jquery-ui-1811.min.js"
    = javascript_include_tag "mobile-application-list"

    :javascript
      (function(window, $, PhotoSwipe){

          $(document).ready(function(){

              var options = {};
              $(".photo_wrapper a").photoSwipe(options);

          });


      }(window, window.jQuery, window.Code.PhotoSwipe));


    = csrf_meta_tags
  %body{:class => body_classes}
    #fb-root
    %script
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=185976958177339";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

    = render 'layouts/global_nav'

    #wrapper
      #button
        %label{:for => "handler-right", :id => "right", :href => "#"}
          Filters
        %label{:for => "handler-left", :id => "left", :href => "#"}
          Menu
        #main_header
          = link_to "eric<span>isaac</span>".html_safe, root_path
      #content
        #flash
          %p.notice= notice
          %p.alert= alert

        = yield

    = render 'layouts/footer'
    %script{:type => "text/javascript", :src => "//assets.pinterest.com/js/pinit.js"}