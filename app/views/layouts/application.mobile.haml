!!!
%html
  %head
    - if content_for?(:title)
      = content_for(:title)
    - else
      %title Eric Isaac Photography

    -#%meta{:name => "apple-mobile-web-app-capable", :content => "yes"}
    %meta{:name => "apple-mobile-web-app-status-bar-style", :content => "black"}
    %meta{:name => "viewport", :content => "width = device-width", :"initial-scale" => 0}

    - if content_for?(:meta_keywords)
      = content_for(:meta_keywords)

    - if content_for?(:meta_description)
      = content_for(:meta_description)

    - if content_for?(:facebook)
      = content_for(:facebook)

    = stylesheet_link_tag "mobile", :media => 'all'
    = javascript_include_tag "jquery-182.min.js"
    = javascript_include_tag "jquery-ui-1811.min.js"
    = javascript_include_tag "mobile-application-list"

    = csrf_meta_tags
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-45056120-1', 'ericisaac.com');
      ga('send', 'pageview');

      var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-45056120-1']);
        _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body{:class => body_classes}
    #fb-root
    %script
      (function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=185976958177339";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));

    = render 'layouts/global_nav'

    #header.mm-fixed-top
      -#- unless controller.controller_name == "bio"
      -#  %label{:for => "handler-right", :id => "right", :href => "#"}
      -#    filter
      = link_to "menu", "#menu", :class => 'menu'
      #main_header
        = link_to "eric<span>isaac</span>".html_safe, root_path
      - unless controller.controller_name == "bio"
        = link_to "filters", "#filters", :class => 'filter'

    #content
      .loader
      #flash
        %p.notice= notice
        %p.alert= alert

      = yield

    = render 'layouts/footer'
    %script{:type => "text/javascript", :src => "//assets.pinterest.com/js/pinit.js"}